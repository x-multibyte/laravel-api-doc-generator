{
  "name": "laravel-api-docs/generator",
  "description": "Laravel API Documentation Generator with multiple UI themes and OpenAPI 3+ support",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/framework": "^10.0|^11.0",
    "symfony/yaml": "^6.0|^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "orchestra/testbench": "^8.0|^9.0",
    "mockery/mockery": "^1.4",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "LaravelApiDocs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LaravelApiDocs\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html build/coverage",
    "test-coverage-text": "vendor/bin/phpunit --coverage-text",
    "test-coverage-clover": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix",
    "analyse": "phpstan analyse",
    "test-all": ["@cs-check", "@test", "@test-coverage-text"]
  },
  "extra": {
    "laravel": {
      "providers": ["LaravelApiDocs\\ApiDocsServiceProvider"]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
